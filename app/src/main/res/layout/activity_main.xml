<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_main_the_lolin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="111dp"
        android:text="@string/the_lolin"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView_main_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/we_bring_all_health_services_to_one_place"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/btn_main_logIn"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/btn_main_Create_Accnt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="123dp"
        android:text="@string/already_have_an_account" />

    <Button
        android:id="@+id/btn_main_Create_Accnt"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="56dp"
        android:text="@string/need_an_account" />

</RelativeLayout>